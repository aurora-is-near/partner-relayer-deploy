---
version: '3.8'
services:
  database:
    container_name: mainnet_database
    image: nearaurora/database:mainnet
    restart: unless-stopped
    ports:
      - '127.0.0.1:15432:5432'
    volumes:
      - ./database:/var/lib/postgresql/data
  indexer:
    container_name: mainnet_indexer
    image: nearaurora/endpoint:mainnet
    restart: unless-stopped
    init: true
    depends_on:
      - database
    environment:
      - NEAR_ENV=mainnet
      - NODE_ENV=mainnet
    volumes:
      - ./config:/srv/aurora/relayer/config
    extra_hosts:
      - host.docker.internal:host-gateway # See: https://stackoverflow.com/a/43541732
    entrypoint: ["sh", "-c", "util/indexer/indexer | node lib/indexer_backend.js"]
  endpoint:
    container_name: endpoint
    image: nearaurora/endpoint:mainnet
    restart: unless-stopped
    init: true
    depends_on:
      - database
      - nearcore
    environment:
      - NEAR_ENV=mainnet
      - NODE_ENV=mainnet
    expose:
      - '8545'
    volumes:
      - ./config:/srv/aurora/relayer/config
    entrypoint: ["node", "lib/index.js"]
    logging:
      driver: "json-file"
      options:
        max-file: 5
        max-size: "10m"
  nearcore:
    container_name: mainnet_nearcore
    image: nearaurora/nearcore:mainnet
    restart: unless-stopped
    init: true
    depends_on:
      - indexer
    expose:
      - 3030
    volumes:
      - ./near:/home/near
  resilver:
    container_name: mainnet_resilver
    image: nearaurora/endpoint:mainnet
    restart: "no"
    init: true
    depends_on:
      - database
      - nearcore
    environment:
      - NEAR_ENV=mainnet
      - NODE_ENV=mainnet
    volumes:
      - ./config:/srv/aurora/relayer/config
    extra_hosts:
      - host.docker.internal:host-gateway # See: https://stackoverflow.com/a/43541732
    entrypoint: ["sh", "-c", "/srv/aurora/relayer/util/update/update.sh"]      
volumes:
  database:
  nearcore:
